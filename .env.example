# ===========================================
# CLIENT-SIDE VARIABLES (safe to expose)
# ===========================================
# These are prefixed with VITE_ and bundled into the frontend

# Session Configuration (in days)
VITE_SESSION_DURATION_DAYS=30

# Baserow Table IDs (not sensitive - just table identifiers)
VITE_BASEROW_TABLE_CUSTOMERS=764
VITE_BASEROW_TABLE_PROSPECTS=765
VITE_BASEROW_TABLE_PROJECTS=768

# App Configuration
VITE_APP_NAME=Kaspers Advies Communication Hub
VITE_APP_VERSION=1.0.0


# ===========================================
# SERVER-SIDE VARIABLES (secrets - Vercel only)
# ===========================================
# These are NOT prefixed with VITE_ and stay on the server
# Configure these in Vercel Dashboard → Project → Settings → Environment Variables

# Baserow API Configuration
BASEROW_API_URL=https://baserow.kaspersadvies.nl
BASEROW_TOKEN=your_baserow_database_token_here

# N8N Webhook Authentication
N8N_AUTH_USERNAME=your_basic_auth_username
N8N_AUTH_PASSWORD=your_basic_auth_password

# N8N Webhook URLs
N8N_AUTH_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-auth-webhook-id
N8N_CREATE_CLIENT_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-create-client-webhook-id
N8N_UPDATE_CLIENT_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-update-client-webhook-id
N8N_CLIENT_ACTION_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-client-action-webhook-id
N8N_CREATE_PROSPECT_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-create-prospect-webhook-id
N8N_UPDATE_PROSPECT_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-update-prospect-webhook-id
N8N_PROSPECT_LOST_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-prospect-lost-webhook-id
N8N_CREATE_PROJECT_WEBHOOK_URL=https://n8n.kaspersadvies.nl/webhook/your-create-project-webhook-id
